<?xml version="1.0" encoding="utf-8"?>
<!--
  Data extraction rules for Android 12+ (API 31+)
  Controls what data can be extracted from the app
-->
<data-extraction-rules xmlns:android="http://schemas.android.com/apk/res/android">
    
    <cloud-backup>
        <!-- Include game progress and user data -->
        <include domain="sharedpref" path="gameProgress.xml" />
        <include domain="sharedpref" path="userSettings.xml" />
        <include domain="sharedpref" path="achievements.xml" />
        <include domain="sharedpref" path="statistics.xml" />
        <include domain="sharedpref" path="levelProgress.xml" />
        <include domain="file" path="saves/" />
        
        <!-- Exclude sensitive and cache data -->
        <exclude domain="sharedpref" path="admob_preferences.xml" />
        <exclude domain="sharedpref" path="google_play_games_cache.xml" />
        <exclude domain="file" path="temp/" />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="logs/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all user data for device transfer -->
        <include domain="sharedpref" path="gameProgress.xml" />
        <include domain="sharedpref" path="userSettings.xml" />
        <include domain="sharedpref" path="achievements.xml" />
        <include domain="sharedpref" path="statistics.xml" />
        <include domain="sharedpref" path="levelProgress.xml" />
        <include domain="file" path="saves/" />
        
        <!-- Exclude temporary and sensitive data -->
        <exclude domain="sharedpref" path="admob_preferences.xml" />
        <exclude domain="file" path="temp/" />
        <exclude domain="file" path="cache/" />
    </device-transfer>
    
</data-extraction-rules>